        },
        {
          "step": 3,
          "action": "Enter valid child data: Name: 'Test Child', DOB: '2020-01-15', Gender: 'Male'",
          "expected": "All fields accepted without errors"
        },
        {
          "step": 4,
          "action": "Take/upload child photo",
          "expected": "Photo appears in preview"
        },
        {
          "step": 5,
          "action": "Select zone 'Zone A' and assign worker 'John Smith'",
          "expected": "Zone and worker selected successfully"
        },
        {
          "step": 6,
          "action": "Save child registration",
          "expected": "Child saved and appears in list"
        }
      ],
      "test_data": {
        "child_name": "Test Child Alpha",
        "dob": "2020-01-15",
        "gender": "Male",
