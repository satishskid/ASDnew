      "description": "Test MUAC measurement for malnutrition detection across different severity levels",
      "steps": [
        {
          "step": 1,
          "action": "Navigate to MUAC measurement screen",
          "expected": "MUAC camera interface opens"
        },
        {
          "step": 2,
          "action": "Take MUAC photo for severe malnutrition case",
          "expected": "Arm detected, measurement processed"
        },
        {
          "step": 3,
          "action": "Verify MUAC < 11.5cm triggers red alert",
          "expected": "Severe malnutrition warning displayed"
        },
        {
          "step": 4,
          "action": "Test moderate case (11.5-12.5cm)",
          "expected": "Orange warning for moderate malnutrition"
        },
        {
          "step": 5,
          "action": "Test normal case (>13.5cm)",
          "expected": "Green 'Normal' status"
        }
      ],
      "test_data": {
        "severe_muac": 10.5,
        "moderate_muac": 12.0,
        "normal_muac": 14.0
      }
